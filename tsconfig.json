{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "rootDirs": ["src", "stories"],
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["demo", "node_modules", "dist"]
}
